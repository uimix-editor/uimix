{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "module": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["dom", "esnext"], // TODO: remove dom dependency
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true
  }
}
